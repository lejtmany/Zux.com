extends layout
block content 
	.page-header
		h1 Sign Up
	form(method="POST" action='/login/signup')
		.form-group
			label User Name
			input.form-control(type="text", name="username")
		.form-group
			label Password
			input.form-control(type="Password", name="password")
		button.btn.btn-default(type="submit") Sign Up